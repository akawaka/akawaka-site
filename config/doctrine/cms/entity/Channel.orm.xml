<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\CMS\Domain\Entity\Channel" table="cms_channel">
        <id name="id" type="uuid" column="id" length="128">
            <generator strategy="NONE"/>
        </id>

        <field name="code" unique="true" />
        <field name="name" />
        <field name="status" />

        <field name="url" nullable="true" />
        <field name="description" type="text" nullable="true" />

        <field name="creationDate" type="date_immutable" />
        <field name="lastUpdate" type="date_immutable" nullable="true" />
    </entity>

</doctrine-mapping>
