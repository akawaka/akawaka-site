<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\CMS\Domain\Entity\Page" table="cms_page">
        <id name="id" type="guid" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="name" />
        <field name="slug" unique="true" />
        <field name="status" />

        <field name="content" type="text" nullable="true" />

        <field name="creationDate" type="date_immutable" />
        <field name="lastUpdate" type="date_immutable" nullable="true" />

        <many-to-many field="spaces" target-entity="Mono\Component\Space\Domain\Entity\SpaceInterface">
            <join-table name="cms_page_spaces">
                <join-columns>
                    <join-column name="page_id" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="space_id" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>

</doctrine-mapping>
