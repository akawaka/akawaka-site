<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Security\Domain\Entity\AdminPasswordRecovery" table="security_admin_recovery">
        <id name="id" type="guid" column="id" >
            <generator strategy="NONE"/>
        </id>

        <field name="token" unique="true" />
        <field name="creationDate" type="date_immutable" />

        <many-to-one field="user" target-entity="App\Security\Domain\Entity\AdminUser">
            <join-column name="user_id" />
        </many-to-one>
    </entity>

</doctrine-mapping>
