{% extends 'front/base.html.twig' %}

{% block body %}
    <div class="relative bg-white">
        <div class="lg:absolute lg:inset-0">
            <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
                <img class="h-56 w-full object-cover lg:absolute lg:h-full" src="https://images.unsplash.com/photo-1556761175-4b46a572b786?ixlib=rb-1.2.1&ixqx=pmdH5mIjoB&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1567&q=80" alt="">
            </div>
        </div>
        <div class="relative py-16 px-4 sm:py-24 sm:px-6 lg:px-8 lg:max-w-7xl lg:mx-auto lg:py-32 lg:grid lg:grid-cols-2">
            <div class="lg:pr-8">
                <div class="max-w-md mx-auto sm:max-w-lg lg:mx-0">
                    <h2 class="text-3xl font-extrabold tracking-tight sm:text-4xl">
                        Let's work together
                    </h2>
                    <p class="mt-4 text-lg text-gray-500 sm:mt-3">
                        We’d love to hear from you! Send us a message using the form opposite, or email us. We’d love to hear from you! Send us a message using the form opposite, or email us.
                    </p>
                    {{ form_start(form) }}
                        <div>
                            {{ form_row(form.firstname, {'attr': {'autocomplete': 'firstname'}}) }}
                        </div>
                        <div>
                            {{ form_row(form.lastname, {'attr': {'autocomplete': 'firstname'}}) }}
                        </div>
                        <div class="sm:col-span-2">
                            {{ form_row(form.email, {'attr': {'autocomplete': 'firstname'}}) }}
                        </div>
                        <div class="sm:col-span-2">
                            {{ form_row(form.phone) }}
                        </div>
                        <div class="sm:col-span-2">
                            <div class="flex justify-between">
                                {{ form_label(form.message) }}
                                <span id="how_can_we_help_description" class="text-sm text-gray-500">Max. 500 characters</span>
                            </div>
                            <div class="mt-1">
                                {{ form_widget(form.message, {'attr': {'aria-describedby': 'type_message_description', 'rows': '4', 'class': 'py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md'}}) }}
                            </div>
                        </div>
                        <fieldset class="sm:col-span-2">
                            {{ form_row(form.budget) }}
                        </fieldset>
                        <div class="sm:col-span-2">
                            {{ form_row(form.how, {'attr': {'autocomplete': 'firstname'}}) }}
                        </div>
                        <div class="text-right sm:col-span-2">
                            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Submit
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
