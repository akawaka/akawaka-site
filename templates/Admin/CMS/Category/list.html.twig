{% extends 'Admin/base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-0 flex-1 overflow-hidden">
        <div class="md:hidden pl-1 pt-1 sm:pl-3 sm:pt-3">
            <button class="-ml-0.5 -mt-0.5 h-12 w-12 inline-flex items-center justify-center rounded-md text-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
                <span class="sr-only">Open sidebar</span>
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <div class="py-6">
            <div class="hidden sm:block">
                <div class="max-w-12xl mx-auto px-4 sm:px-6 lg:px-8">
                    {% include "Admin/Layout/_flashes.html.twig" %}

                    <div class="flex flex-col mt-2">
                        {% include 'Admin/Layout/View/List/_header.html.twig' with {
                            'title': "admin.cms.ui.category.list.title",
                            'action': {
                                'name': "admin.cms.ui.category.list.actions.create",
                                'link': url(constant('App\\UI\\Admin\\Controller\\RouteName::ADMIN_CMS_CATEGORIES_CREATE')['name'])
                            }
                        } %}

                        <div class="align-middle min-w-full overflow-x-auto shadow overflow-hidden sm:rounded-lg">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Name
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Slug
                                    </th>
                                    <th scope="col" class="relative px-6 py-3">
                                        <span class="sr-only">Edit</span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for result in results %}
                                    <tr class="{{ loop.index is odd ? 'bg-white' : 'bg-gray-50' }}">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            {{ result.name }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            {{ result.slug }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <a href="{{ url(constant('App\\UI\\Admin\\Controller\\RouteName::ADMIN_CMS_CATEGORIES_UPDATE')['name'], {'identifier': result.identifier }) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                            <a href="{{ url(constant('App\\UI\\Admin\\Controller\\RouteName::ADMIN_CMS_CATEGORIES_DELETE')['name'], {'identifier': result.identifier }) }}" class="text-indigo-600 hover:text-indigo-900">Delete</a>
                                        </td>
                                    </tr>
                                {% else %}

                                {% endfor %}
                                </tbody>
                            </table>

                            {% include 'Admin/Layout/View/List/_nav.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
