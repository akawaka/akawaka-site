{% extends 'Admin/base_logout.html.twig' %}

{% block body %}
<div>
    <h1 class="mt-6 text-3xl font-extrabold text-gray-900">
        {{ 'admin.security.ui.login.title'|trans }}
    </h1>
</div>

<div class="mt-8">
    <div class="mt-6">
        <p>{{ 'admin.security.ui.recover_password.confirmation'|trans({'password': password, 'username': username })|raw }}</p>

        <p>
            <a href="{{ url(constant('App\\UI\\Admin\\Controller\\Routes::ADMIN_LOGIN')['name']) }}" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                {{ 'admin.security.ui.recover_password.login'|trans }}
            </a>
        </p>
    </div>
</div>
{% endblock %}
