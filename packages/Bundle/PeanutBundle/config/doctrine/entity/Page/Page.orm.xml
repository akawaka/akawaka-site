<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Black\Bundle\PeanutBundle\Domain\Entity\Page\Page" table="peanut_page">
        <id name="id" column="id" type="guid" />

        <field name="name" type="string" />
        <field name="slug" type="string" unique="true" />
        <field name="content" type="text" />
        <field name="status" type="string" />
        <field name="dateCreated" type="date_immutable" />
        <field name="dateUpdated" type="date_immutable" nullable="true" />
    </entity>

</doctrine-mapping>
