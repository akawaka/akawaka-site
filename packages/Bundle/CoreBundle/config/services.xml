<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autoconfigure="true" autowire="true" public="false" />
        <prototype namespace="Black\Bundle\CoreBundle\" resource="../src/" />

        <service id="domain.marking.store" class="Black\Bundle\CoreBundle\Infrastructure\Workflow\DomainMarkingStore">
            <argument type="string">true</argument>
            <argument type="string">state</argument>
        </service>

        <service id="notifier.channel.browser" class="Black\Bundle\CoreBundle\Infrastructure\Notifier\Channel\BrowserChannel">
            <argument type="service" id="request_stack" />
            <argument type="string">state</argument>

            <tag name="notifier.channel" channel="browser" />
        </service>
    </services>
</container>
